{
  "name": "lambda-layer-sharp",
  "version": "1.0.0",
  "repository": "git@github.com:Umkus/lambda-layer-sharp.git",
  "license": "Apache License 2.0",
  "module": "lambda-layer-sharp",
  "devDependencies": {
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "zip-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1"
  },
  "dependencies": {
    "sharp": "0.26.0"
  },
  "engines": {
    "node": ">=12.14.0"
  },
  "author": "Mykhailo Gorianskyi <goreanski@gmail.com>",
  "scripts": {
    "deps": "docker run -v \"$PWD\":/var/task lambci/lambda:build-nodejs12.x npm --no-optional --no-audit --progress=false install",
    "webpack": "docker run -v \"$PWD\":/var/task lambci/lambda:build-nodejs12.x node ./node_modules/webpack/bin/webpack.js",
    "smoke-test": "docker run -w /var/task/dist/nodejs -v \"$PWD\":/var/task lambci/lambda:build-nodejs12.x node -e \"console.log(require('sharp'))\"",
    "build": "npm run deps && npm run webpack && npm run smoke-test",
    "deploy": "aws lambda publish-layer-version --layer-name sharp --description \"Sharp layer\" --license-info \"Apache License 2.0\" --zip-file fileb://dist/sharp-layer.zip --compatible-runtimes nodejs12.x"
  }
}
